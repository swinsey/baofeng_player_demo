<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <bf.cloud.black_board_ui.BFMediaPlayerControllerVod
        android:id="@+id/vod_media_controller"
        android:layout_width="1080px"
        android:layout_height="720px" >
    </bf.cloud.black_board_ui.BFMediaPlayerControllerVod>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <Button
                android:id="@+id/change_decode_mode"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="设置解码模式" />

            <Button
                android:id="@+id/start"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="start" />

            <Button
                android:id="@+id/stop"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="stop" />

            <Button
                android:id="@+id/pause"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="pause" />

            <Button
                android:id="@+id/resume"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="resume" />

            <Button
                android:id="@+id/seekto"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="seekto" />

            <Button
                android:id="@+id/inc_volume"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="增加音量" />

            <Button
                android:id="@+id/dec_volume"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="降低音量" />

            <Button
                android:id="@+id/get_current_volume"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="获取当前音量" />

            <Button
                android:id="@+id/get_max_volume"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="获取最大音量" />

            <Button
                android:id="@+id/get_cur_position"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="获取当前位置" />

            <Button
                android:id="@+id/get_duration"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="获取片长" />
            <Button
                android:id="@+id/auto_screen"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="设置手机旋转屏幕跟随" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>