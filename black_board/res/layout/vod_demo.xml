<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <bf.cloud.android.playutils.VodPlayer
        android:id="@+id/vod_player"
        android:layout_width="match_parent"
        android:layout_height="300dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical" >
            
            <Button
                android:id="@+id/change_decode_mode"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="设置解码模式" />
            <Button 
                android:id="@+id/change_player_type"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="切换播放器类型"
                />

            <Button
                android:id="@+id/start"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="start" />

            <Button
                android:id="@+id/stop"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="stop" />

            <Button
                android:id="@+id/pause"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="pause" />

            <Button
                android:id="@+id/resume"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="resume" />

            <Button
                android:id="@+id/seekto"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="seekto" />

            <Button
                android:id="@+id/inc_volume"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="增加音量" />

            <Button
                android:id="@+id/dec_volume"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="降低音量" />

            <Button
                android:id="@+id/get_current_volume"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="获取当前音量" />

            <Button
                android:id="@+id/get_max_volume"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="获取最大音量" />
            
            <Button
                android:id="@+id/get_cur_position"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="获取当前位置" />
            
            <Button
                android:id="@+id/get_duration"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="获取片长" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>